@using HalloDal.Models.Content
@using Hallo.ViewModels
@model List<Image>

<h2>Artikelbilleder</h2>

<table style="text-align: center;">
    <tr>
        @foreach (Image i in Model) {
            <td class="btext" style="width: 200px; text-align:left;">
                <img class="taimg" src="@(FrontPageArticle.ImageDirectoryUrl + "/articleImages/thumbnails/img" + (i.OldId == null ? i.Id : i.OldId) + ".jpg")" /><br />
                @i.Description
            </td>
            <td>    
                <a href="/Image/OrderUp/@i.Id">
                    <img src="~/Images/arrow-up-icon.png" />
                </a>
                <br />
                <a href="/Image/OrderDown/@i.Id">
                    <img src="~/Images/arrow-down-icon.png" />
                </a>
            </td>
            @Html.Raw((Model.IndexOf(i) + 1) % 3 == 0 ? "</tr><tr>" : "")
        }
    </tr>
</table>
